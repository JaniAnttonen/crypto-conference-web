---
import Layout from '../components/Layout.astro';
import Heading from '../components/Heading.astro';
---

<Layout title="Boating Accident">

    <div class="min-h-screen">
      <!-- Hero Section -->
      <section class="bg-background text-white border-b border-gray-700">
        <div class="mx-auto max-w-6xl px-6 py-16 lg:px-8 lg:py-20">
          <div class="text-center">
            <Heading level={1} size="4xl" class="sm:text-5xl lg:text-6xl">
              Boating Accident
              <span class="block text-gray-400">2026</span>
            </Heading>
            <p class="mx-auto mt-6 max-w-2xl text-lg leading-8 text-gray-300 sm:text-xl font-mono">
              Exclusive Crypto Conference
              Blockchain Innovation Summit
            </p>
            <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4">
              <a
                href="#"
                class="bg-white text-black px-8 py-3 text-sm font-bold font-mono uppercase hover:bg-gray-200 transition-colors border border-white"
              >
                Buy Tickets
              </a>
              <a
                href="/program"
                class="border border-white px-8 py-3 text-sm font-bold font-mono uppercase text-white hover:bg-white hover:text-black transition-colors"
              >
                Program
              </a>
              <a href="#sponsors" class="text-sm font-bold leading-6 text-gray-400 hover:text-white transition-colors font-mono">
                Sponsors
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- Sponsors Section -->
      <section id="sponsors" class="py-16 lg:py-24">
        <div class="mx-auto max-w-6xl px-6 lg:px-8">
          <div class="text-center">
            <Heading level={2} size="3xl" class="sm:text-4xl">
              Sponsors
            </Heading>
            <p class="mt-4 text-lg text-gray-400 font-mono">
              Industry Partners
            </p>
          </div>

          <!-- Platinum Sponsors -->
          <div class="mt-16">
            <Heading level={3} size="2xl" class="text-center mb-8">
              Platinum
            </Heading>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center justify-items-center">
              <div class="flex items-center justify-center bg-[#061126] p-8 border border-gray-600 h-32 w-80">
                <div class="text-gray-400 text-lg font-mono">Sponsor</div>
              </div>
              <div class="flex items-center justify-center bg-[#061126] p-8 border border-gray-600 h-32 w-80">
                <div class="text-gray-400 text-lg font-mono">Sponsor</div>
              </div>
            </div>
          </div>

          <!-- Gold Sponsors -->
          <div class="mt-16">
            <Heading level={3} size="xl" class="text-center mb-8">
              Gold
            </Heading>
            <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 items-center justify-items-center">
              <div class="flex items-center justify-center bg-[#061126] p-6 border border-gray-600 h-24 w-48">
                <div class="text-gray-400 text-sm font-mono">Sponsor</div>
              </div>
              <div class="flex items-center justify-center bg-[#061126] p-6 border border-gray-600 h-24 w-48">
                <div class="text-gray-400 text-sm font-mono">Sponsor</div>
              </div>
              <div class="flex items-center justify-center bg-[#061126] p-6 border border-gray-600 h-24 w-48">
                <div class="text-gray-400 text-sm font-mono">Sponsor</div>
              </div>
              <div class="flex items-center justify-center bg-[#061126] p-6 border border-gray-600 h-24 w-48">
                <div class="text-gray-400 text-sm font-mono">Sponsor</div>
              </div>
            </div>
          </div>

          <!-- Silver Sponsors -->
          <div class="mt-16">
            <Heading level={3} size="lg" class="text-center mb-8">
              Silver
            </Heading>
            <div class="grid grid-cols-3 lg:grid-cols-6 gap-4 items-center justify-items-center">
              <div class="flex items-center justify-center bg-[#061126] p-4 border border-gray-600 h-20 w-32">
                <div class="text-gray-400 text-xs font-mono">Sponsor</div>
              </div>
              <div class="flex items-center justify-center bg-[#061126] p-4 border border-gray-600 h-20 w-32">
                <div class="text-gray-400 text-xs font-mono">Sponsor</div>
              </div>
              <div class="flex items-center justify-center bg-[#061126] p-4 border border-gray-600 h-20 w-32">
                <div class="text-gray-400 text-xs font-mono">Sponsor</div>
              </div>
              <div class="flex items-center justify-center bg-[#061126] p-4 border border-gray-600 h-20 w-32">
                <div class="text-gray-400 text-xs font-mono">Sponsor</div>
              </div>
              <div class="flex items-center justify-center bg-[#061126] p-4 border border-gray-600 h-20 w-32">
                <div class="text-gray-400 text-xs font-mono">Sponsor</div>
              </div>
              <div class="flex items-center justify-center bg-[#061126] p-4 border border-gray-600 h-20 w-32">
                <div class="text-gray-400 text-xs font-mono">Sponsor</div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Signup Section -->
      <section class="bg-[#061126] py-16 lg:py-24 border-t border-b border-gray-700">
        <div class="mx-auto max-w-6xl px-6 lg:px-8">
          <div class="text-center">
            <Heading level={2} size="3xl" class="sm:text-4xl">
              Newsletter
            </Heading>
            <p class="mt-4 text-lg text-gray-400 font-mono">
              Stay Updated
            </p>
          </div>

          <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center items-center max-w-md mx-auto">
            <input
              type="email"
              placeholder="Enter your email address"
              class="w-full px-4 py-3 text-white bg-[#061126] border border-gray-600 focus:outline-none focus:border-white font-mono"
            />
            <button
              type="submit"
              class="w-full sm:w-auto px-6 py-3 text-black bg-white hover:bg-gray-200 font-bold transition-colors duration-200 focus:outline-none font-mono"
            >
              Sign Up
            </button>
          </div>

          <p class="mt-4 text-center text-sm text-gray-500 font-mono">
            No spam. Unsubscribe anytime.
          </p>
        </div>
      </section>
    </div>

</Layout>
