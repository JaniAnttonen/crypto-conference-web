---
import Layout from '../components/Layout.astro';
import Heading from '../components/sections/Heading.astro';
---

<Layout title="Program - Boating Accident" currentPage="program">
  <!-- Header -->
  <section class="bg-[#061126] text-white py-16 border-b border-gray-700 col-span-5">
    <div class="mx-auto max-w-6xl px-6 lg:px-8">
      <div class="text-left">
        <Heading level={1} size="4xl" class="sm:text-5xl lg:text-6xl">
          Program
        </Heading>
        <p class="mt-6 max-w-2xl text-lg leading-8 text-gray-400 font-mono">
          Conference Schedule
        </p>
      </div>
    </div>
  </section>

  <!-- Program Content -->
  <section class="py-16 lg:py-24 col-span-5">
    <div class="mx-auto max-w-6xl px-6 lg:px-8">
      <div class="space-y-12">
        <!-- Day 1 -->
        <div>
          <Heading level={2} size="3xl" class="mb-8 text-white">Day 1</Heading>
          <div class="bg-[#061126] p-8 border border-gray-600">
            <Heading level={3} size="2xl" class="text-white">Cocktail & Cruise</Heading>
          </div>
        </div>

        <!-- Day 2 -->
        <div>
          <Heading level={2} size="3xl" class="mb-8 text-white">Day 2</Heading>
          <div class="bg-[#061126] p-8 border border-gray-600">
            <Heading level={3} size="2xl" class="text-white">Conference and Afterparty</Heading>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>