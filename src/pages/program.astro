---
import Layout from '../components/Layout.astro';
---

<Layout title="Program - Boating Accident" currentPage="program">
  <!-- Header -->
  <section class="bg-[#061126] text-white py-16 border-b border-gray-700">
    <div class="mx-auto max-w-6xl px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight sm:text-6xl" style="font-family: 'Handjet', monospace; image-rendering: pixelated; image-rendering: -moz-crisp-edges; image-rendering: crisp-edges; text-rendering: geometricPrecision; font-weight: 300; letter-spacing: 0.05em;">
          Program
        </h1>
        <p class="mx-auto mt-6 max-w-2xl text-lg leading-8 text-gray-400 font-mono">
          Conference Schedule
        </p>
      </div>
    </div>
  </section>

  <!-- Program Content -->
  <section class="py-16 lg:py-24">
    <div class="mx-auto max-w-6xl px-6 lg:px-8">
      <div class="space-y-12">
        <!-- Day 1 -->
        <div>
          <h2 class="text-3xl font-bold text-white mb-8" style="font-family: 'Handjet', monospace; image-rendering: pixelated; image-rendering: -moz-crisp-edges; image-rendering: crisp-edges; text-rendering: geometricPrecision; font-weight: 300; letter-spacing: 0.05em;">Day 1</h2>
          <div class="space-y-6">
            <div class="bg-[#061126] p-6 border border-gray-600">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="text-xl font-semibold text-white" style="font-family: 'Handjet', monospace; image-rendering: pixelated; image-rendering: -moz-crisp-edges; image-rendering: crisp-edges; text-rendering: geometricPrecision; font-weight: 300; letter-spacing: 0.05em;">Opening Ceremony</h3>
                  <p class="text-gray-400 mt-2 font-mono">Welcome and Conference Overview</p>
                </div>
                <span class="text-white font-semibold font-mono">09:00 - 10:00</span>
              </div>
            </div>

            <div class="bg-[#061126] p-6 border border-gray-600">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="text-xl font-semibold text-white" style="font-family: 'Handjet', monospace; image-rendering: pixelated; image-rendering: -moz-crisp-edges; image-rendering: crisp-edges; text-rendering: geometricPrecision; font-weight: 300; letter-spacing: 0.05em;">Blockchain Fundamentals</h3>
                  <p class="text-gray-400 mt-2 font-mono">Keynote Presentation</p>
                </div>
                <span class="text-teal-600 font-semibold">10:30 - 11:30</span>
              </div>
            </div>

            <div class="bg-[#061126] p-6 border border-gray-600">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="text-xl font-semibold text-white" style="font-family: 'Handjet', monospace; image-rendering: pixelated; image-rendering: -moz-crisp-edges; image-rendering: crisp-edges; text-rendering: geometricPrecision; font-weight: 300; letter-spacing: 0.05em;">DeFi Workshop</h3>
                  <p class="text-gray-400 mt-2 font-mono">Hands-on Session</p>
                </div>
                <span class="text-teal-600 font-semibold">14:00 - 16:00</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Day 2 -->
        <div>
          <h2 class="text-3xl font-bold text-white mb-8" style="font-family: 'Handjet', monospace; image-rendering: pixelated; image-rendering: -moz-crisp-edges; image-rendering: crisp-edges; text-rendering: geometricPrecision; font-weight: 300; letter-spacing: 0.05em;">Day 2</h2>
          <div class="space-y-6">
            <div class="bg-[#061126] p-6 border border-gray-600">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="text-xl font-semibold text-white" style="font-family: 'Handjet', monospace; image-rendering: pixelated; image-rendering: -moz-crisp-edges; image-rendering: crisp-edges; text-rendering: geometricPrecision; font-weight: 300; letter-spacing: 0.05em;">NFT Panel</h3>
                  <p class="text-gray-400 mt-2 font-mono">Digital Collectibles Discussion</p>
                </div>
                <span class="text-teal-600 font-semibold">09:00 - 10:30</span>
              </div>
            </div>

            <div class="bg-[#061126] p-6 border border-gray-600">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="text-xl font-semibold text-white" style="font-family: 'Handjet', monospace; image-rendering: pixelated; image-rendering: -moz-crisp-edges; image-rendering: crisp-edges; text-rendering: geometricPrecision; font-weight: 300; letter-spacing: 0.05em;">Trading Strategies</h3>
                  <p class="text-gray-400 mt-2 font-mono">Advanced Techniques</p>
                </div>
                <span class="text-teal-600 font-semibold">11:00 - 12:30</span>
              </div>
            </div>

            <div class="bg-[#061126] p-6 border border-gray-600">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="text-xl font-semibold text-white" style="font-family: 'Handjet', monospace; image-rendering: pixelated; image-rendering: -moz-crisp-edges; image-rendering: crisp-edges; text-rendering: geometricPrecision; font-weight: 300; letter-spacing: 0.05em;">Closing Ceremony</h3>
                  <p class="text-gray-400 mt-2 font-mono">Networking Reception</p>
                </div>
                <span class="text-teal-600 font-semibold">16:00 - 18:00</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>